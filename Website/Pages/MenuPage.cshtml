@page
@model Website.Pages.MenuPageModel
@{
    ViewData["Title"] = "Dino-Diner Menu";
}

<h1>Menu</h1>
<div class="content">
    <div class="menu-item">

        <h2>Combos</h2>
        @foreach (var item in Model.MenuItems)
        {
            if (item is DinoDiner.Menu.CretaceousCombo)
            {
                <div class="menu-item">
                    <h3>@item.ToString()</h3>
                    <h3>Price</h3>
                    <p>@item.Price</p>
                    <h3>Calories</h3>
                    <p>@item.Calories</p>
                    <h3>Ingredients</h3>
                    @for (int i = 0; i < @item.Ingredients.Count; i++)
                    {
                        <p>@item.Ingredients[i]</p>
                    }
                </div>
            }
        }

        <h2>Entrees</h2>
        @foreach (var item in Model.MenuItems)
        {
            if (item is DinoDiner.Menu.Entree)
            {
                <div class="menu-item">
                    <h3>@item.ToString()</h3>
                    <h3>Price</h3>
                    <p>@item.Price</p>
                    <h3>Calories</h3>
                    <p>@item.Calories</p>
                    <h3>Ingredients</h3>
                    @for (int i = 0; i < @item.Ingredients.Count; i++)
                    {
                        <p>@item.Ingredients[i]</p>
                    }
                </div>
            }
        }

        <h2>Sides</h2>
        @foreach (var item in Model.MenuItems)
        {
            if (item is DinoDiner.Menu.Side)
            {
                <div class="menu-item">
                    <h3>@item.ToString()</h3>
                    <h3>Price</h3>
                    <p>@item.Price</p>
                    <h3>Calories</h3>
                    <p>@item.Calories</p>
                    <h3>Ingredients</h3>
                    @for (int i = 0; i < @item.Ingredients.Count; i++)
                    {
                        <p>@item.Ingredients[i]</p>
                    }
                </div>
            }
        }
        <h2>Sides</h2>
        @foreach (var item in Model.MenuItems)
        {
            if (item is DinoDiner.Menu.Drink)
            {
                <div class="menu-item">
                    <h3>@item.ToString()</h3>
                    <h3>Price</h3>
                    <p>@item.Price</p>
                    <h3>Calories</h3>
                    <p>@item.Calories</p>
                    <h3>Ingredients</h3>
                    @for (int i = 0; i < @item.Ingredients.Count; i++)
                    {
                        <p>@item.Ingredients[i]</p>
                    }
                </div>
            }
        }
    </div>

    <div class="searchcontent">
        <form method="post">
            <h4>Search</h4>
            <input type="text" name="Search" />
            <input type="submit" name="filter" id="filter" value="Apply Filter(s)" />
            <input type="reset" value="Clear" />

            <h4>Menu Category</h4>
            <div class="menucheckbox-list">
                <label>
                    <input type="checkbox" name="menuCategory" value="Combo" />
                    Combo
                </label>
                <label>
                    <input type="checkbox" name="menuCategory" value="Entree" />
                    Entree
                </label>
                <label>
                    <input type="checkbox" name="menuCategory" value="Side" />
                    Side
                </label>
                <label>
                    <input type="checkbox" name="menuCategory" value="Drink" />
                    Drink
                </label>
            </div>

            <h4>Price</h4>
            <label>
                Minimum
                <input type="number" min="0" max="10" step="0.1" id="minimum-price" name="minimumPrice" />
            </label>
            <label>
                Maximum
                <input type="number" min="0" max="10" step="0.1" id="maximum-price" name="maximumPrice" />
            </label>

            <h4>Exclude Ingredients</h4>
            <div class="exclude-ingredient">
                @foreach (string s in Model.menu.PossibleIngredients)
                {
                    <label>
                        <input type="checkbox" name="@s" value="@s" />
                        @s
                    </label>
                }
            </div>
        </form>
    </div>
</div>


